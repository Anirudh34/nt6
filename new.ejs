<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Product</title>
</head>

<body>
    <form action="/product/add" method="POST">
        <div>
            <label for="product">product</label>
            <input type="text" id="product" name="product[name]">
        </div>
